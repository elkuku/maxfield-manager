{% extends 'base.html.twig' %}

{% block title %}I üòç Maxfields{% endblock %}

{% block body %}
    <h1  class="text-center">I <i class="bi-heart link-danger"></i> Maxfields</h1>
    {% if app.user %}
        <div class="alert alert-success">
            <h4>Welcome {{ app.user.userIdentifier }}!</h4>
        </div>
    {% else %}
        <h4>
            Howdy stranger =;)
        </h4>
    {% endif %}
        {% for maxfield in maxfields %}
            <div class="row maxfield-row">
            <div class="col-8">
                <a href="{{ path('maxfield_show', {'id': maxfield.id})}}">{{ maxfield.name }}</a>
            </div>
            <div class="col-4">
                <a href="{{ path('maxfield_edit', {'id': maxfield.id})}}">Edit</a>
            </div>
            </div>
        {% else %}
            You don't have any maxfields yet :(
        {% endfor %}
{% endblock %}
